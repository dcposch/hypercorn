#!/usr/bin/env node
const argv = require('yargs')
    .usage('Usage: $0 [options] --dir ./directory')
    .alias('p', 'port')
    .default('port', 8367)
    .alias('h', 'host')
    .default('host', '127.0.0.1')
    .describe('dir', 'hyperfeed directory')
    .describe('port', 'HTTP control server port')
    .describe('host', 'HTTP control server host')
    .demand('dir')
    .argv;

const hyperfeed = require('../');

const HyperFeed = hyperfeed.HyperFeed;
const API = hyperfeed.API;

const h = new HyperFeed({
  storage: argv.dir
});

const api = new API(h);

h.listen(() => {
  api.listen(argv.port, argv.host, () => {
    const info = api.address();

    console.log('Listening on [%s]:%d, feedKey=%s',
                info.address,
                info.port,
                h.getFeedKey().toString('base64'));
  });
});
